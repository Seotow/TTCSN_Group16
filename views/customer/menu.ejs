<header class="header">
    <div class="grid">
        <%- include('navbar.ejs') %>
        <!-- /* Header with search */ -->

        <div class="header-with-search">
            <!-- Logo -->

            <div class="header__logo">
                <a href="/" class="header__logo-link">
                    GROUP 16
                </a>
            </div>

            <!-- Search -->

            <div class="header-search">
                <input
                    type="text"
                    class="header-search__inp"
                    placeholder="Nhập sản phẩm cần tìm" 
                    id="header-search__input"
                    />

                <% if (session.searchHistory) { %>
                    
                <div class="header-search__history">
                    <h3 class="header-search__history-heading">
                        Lịch sử tìm kiếm
                    </h3>
                    <ul class="header-search__history-list">
                        <% session.searchHistory.forEach(query => { %>
                            <li class="header-search__history-item" data-query="<%= query %>">
                                <a href="javascript:void(0);" class="search-history-item"> <%= query %> </a>
                            </li>
                        <% }); %>
                    </ul>
                </div>
                <% } %>

                <button class="header-search__btn" id="header-search__btn">
                    <i class="fas fa-search header-search__btn-icon"></i>
                </button>
            </div>

            <%- include('cart.ejs') %>
        </div>
    </div>
</header>